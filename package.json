{
  "name": "salespro-mobile-ci-test",
  "version": "1.0.0",
  "description": "CI Test Repository for Mobile Tests",
  "scripts": {
    "clean": "rimraf runtime/screenshots/* runtime/reports/* runtime/logs/*",
    "test": "pnpm run clean && wdio run ./wdio.ios.conf.js",
    "test:dev": "NODE_ENV=dev pnpm run test",
    "test:stage": "NODE_ENV=stage pnpm run test",
    "test:hotfix": "NODE_ENV=hotfix pnpm run test",
    "test:prod": "NODE_ENV=production pnpm run test"
  },
  "devDependencies": {
    "@wdio/appium-service": "^8.40.6",
    "@wdio/cli": "^8.40.6",
    "@wdio/local-runner": "^8.40.6",
    "@wdio/mocha-framework": "^8.40.6",
    "@wdio/spec-reporter": "^8.40.6",
    "appium-xcuitest-driver": "^7.27.1",
    "rimraf": "^6.0.1"
  }
}
